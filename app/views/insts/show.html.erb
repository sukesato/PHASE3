<h1>投稿詳細画面</h1>
<p>投稿者<%= @inst.user.name%></p>
<p>タイトル: <%= @inst.title %></p>
<p>内容: <%= @inst.content %></p>
<p>
  <strong>画像:</strong>
  <%= image_tag @inst.image.url, :size => "90x90" %>
</p>

<% unless @inst.user_id == current_user.id %>
  <% if @favorite.present? %>
    <%= link_to 'お気に入り解除する', favorite_path(id: @favorite.id), method: :delete, class: 'btn btn-danger' %>
  <% else %>
    <%= link_to 'お気に入りする', favorites_path(inst_id: @inst.id), method: :post, class: 'btn btn-primary' %>
  <% end %>
<% end %>

<%= link_to '投稿一覧画面に戻る', insts_path %>